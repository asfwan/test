<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.umranium.ebook"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="15"
            android:targetSdkVersion="15"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
            android:allowBackup="false"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Sherlock.__Theme.DarkActionBar"
            android:hardwareAccelerated="false">

        <activity
                android:name="com.umranium.ebook.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
                android:name=".services.WebHostService"
                android:description="@string/web_host_service_description"
                android:exported="false"
                android:label="@string/web_host_service_label"
                android:icon="@drawable/ic_launcher">
        </service>

        <activity
                android:name="ReaderActivity"
                android:exported="false"
                android:configChanges="orientation|screenLayout">
        </activity>

    </application>

</manifest>
